@model GestionLaPiazzolla.Models.Alumno_x_Curso

@{
    ViewData["Title"] = "Detalles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Detalles</h1>

<div>
    <h4>Inscripción</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Alumno)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Alumno.Nombre) @Html.DisplayFor(model => model.Alumno.Apellido)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Curso)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Curso.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FechaInscripcion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaInscripcion)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Activo)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Activo)
            {
                <strong class="text-success">ACTIVO</strong>
            }
            else
            {
                <strong class="text-danger">SUSPENDIDO</strong>
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Observacion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Observacion)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-success" asp-action="Edit" asp-route-id="@Model.AlumnoId">Editar</a> |    
    <a asp-action="Index">Volver al listado</a>
</div>
