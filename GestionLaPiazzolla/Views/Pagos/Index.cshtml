@model IEnumerable<GestionLaPiazzolla.Models.Pago>

@{
    ViewData["Title"] = "Pagos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Pagos</h1>

<p>
    <a class="btn btn-info" asp-action="Create">Nuevo pago</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Monto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaPago)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Observacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Alumno)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Monto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaPago)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Observacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Alumno.Nombre) @Html.DisplayFor(modelItem => item.Alumno.Apellido)
            </td>
            <td>
                <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.PagoId">Editar</a> |
                <a class="btn btn-warning" asp-action="Details" asp-route-id="@item.PagoId">Detalles</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.PagoId">Borrar</a>
            </td>
        </tr>
}
    </tbody>
</table>
