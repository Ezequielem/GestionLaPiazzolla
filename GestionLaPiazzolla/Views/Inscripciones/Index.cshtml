@model IEnumerable<GestionLaPiazzolla.Models.Alumno_x_Curso>

@{
    ViewData["Title"] = "Inscripciones";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Inscripciones</h1>

<p>
    <a class="btn btn-info" asp-action="Create">Nueva inscripción</a>
</p>

<nav class="navbar navbar-dark bg-primary">
    <a class="navbar-brand" asp-action="Index">Listado completo</a>
    <form class="form-inline" asp-action="Index" method="get">
        <input class="form-control mr-sm-2" type="search" placeholder="Buscar por nombre" aria-label="Search" name="cadenaBusqueda" value="@ViewData["FiltroActual"]">
        <button class="btn btn-outline-light my-2 my-sm-0" type="submit">Buscar</button>
    </form>
</nav>

<table class="table">
    <thead class="thead-light">
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["AlumnoSortParametro"]">@Html.DisplayNameFor(model => model.Alumno)</a>                
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["CursoSortParametro"]">@Html.DisplayNameFor(model => model.Curso)</a>                
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["FechaSortParametro"]">@Html.DisplayNameFor(model => model.FechaInscripcion)</a>                
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["ActivoSortParametro"]">@Html.DisplayNameFor(model => model.Activo)</a>                
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["ObservSortParametro"]">@Html.DisplayNameFor(model => model.Observacion)</a>                
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Alumno.Nombre) @Html.DisplayFor(modelItem => item.Alumno.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Curso.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaInscripcion)
            </td>
            @if (item.Activo)
            {
                <td>
                    <strong class="text-success">ACTIVO</strong>
                </td>
            }
            else
            {
                <td>
                    <strong class="bg-danger">SUSPENDIDO</strong>
                </td>
            }
            <td>
                @Html.DisplayFor(modelItem => item.Observacion)
            </td>
            <td class="text-right">
            <a class="btn btn-outline-success" asp-action="Edit" asp-route-id="@item.AlumnoId">Editar</a> |
            <a class="btn btn-outline-warning" asp-action="Details" asp-route-id="@item.AlumnoId">Detalles</a> |
            <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.AlumnoId">Borrar</a>
            </td>
        </tr>
}
    </tbody>
</table>
